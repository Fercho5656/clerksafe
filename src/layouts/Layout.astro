---
import '@/styles/global.css'
import {
  SignedOut,
  SignInButton,
  SignedIn,
  UserButton,
} from '@clerk/astro/components'
import { Image } from 'astro:assets'
import clerkSafeIcon from '@/assets/clerksafe.webp'

interface Props {
  title: string
}

const { title } = Astro.props as Props
const { pathname } = Astro.url
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-white shadow">
      <div
        class="container mx-auto px-4 py-5 flex justify-between items-center"
      >
        <a class="flex items-center" href="/" target="_blank" rel="noopener">
          <Image
            src={clerkSafeIcon}
            alt="ðŸ”’"
            class="w-12 h-12 rounded-full"
            width={50}
            height={50}
          />
          <h1 class="text-2xl font-bold text-gray-800">ClerkSafe</h1>
        </a>

        <nav>
          <ul class="flex items-center space-x-6">
            <SignedOut>
              <li>
                <a
                  href="# "
                  class="text-gray-700 hover:text-blue-500 transition">Home</a
                >
              </li>
              <li>
                <a
                  href="#features"
                  class="text-gray-700 hover:text-blue-500 transition"
                  >Features</a
                >
              </li>
              <li>
                <a
                  href="#contact"
                  class="text-gray-700 hover:text-blue-500 transition"
                  >Contact</a
                >
              </li>
            </SignedOut>
            <SignedIn>
              <li>
                <a
                  href="/safe/my-files"
                  class={`text-gray-700 hover:text-blue-500 transition ${
                    pathname === '/safe/my-files'
                      ? 'font-bold text-blue-500'
                      : ''
                  }`}>My Files</a
                >
              </li>
              <li>
                <a
                  href="/safe/shared-with-me"
                  class={`text-gray-700 hover:text-blue-500 transition ${
                    pathname === '/safe/shared-with-me'
                      ? 'font-bold text-blue-500'
                      : ''
                  }`}>Shared with Me</a
                >
              </li>
            </SignedIn>
            <li>
              <SignedOut>
                <SignInButton asChild mode="modal">
                  <button
                    class="px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-full transition duration-200 cursor-pointer"
                  >
                    Log In
                  </button>
                </SignInButton>
              </SignedOut>
              <SignedIn>
                <UserButton />
              </SignedIn>
            </li>
          </ul>
        </nav>
      </div>
      <slot />
    </header>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
